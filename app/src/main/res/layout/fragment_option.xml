<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".fragments.loginfragments.OptionFragment">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/airmovieslogowhite"
        app:layout_constraintBottom_toBottomOf="@id/guidelineOptionBottom"
        app:layout_constraintTop_toTopOf="@id/guidelineOptionTop"
        app:layout_constraintStart_toStartOf="@id/guidelineOptionStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineOptionEnd" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_height"
        android:backgroundTint="@color/btnColor"
        android:layout_marginTop="@dimen/_50sdp"
        android:text="Alerady a member"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toBottomOf="@id/guidelineOptionBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineOptionStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineOptionEnd" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_height"
        android:backgroundTint="@color/white"
        android:text="Register now"
        android:textAllCaps="false"
        android:textColor="@color/btnColor"
        android:textSize="@dimen/_12ssp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineOptionStart"
        app:layout_constraintEnd_toEndOf="@id/guidelineOptionEnd" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOptionStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOptionEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOptionTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOptionBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>